{
  "PATHS": {
    "VIDEO_FOLDER": "data/inputs/videos/",
    "PROMPT_FILE": "data/prompt.txt",
    "AUDIO_TRANSCRIPT_FOLDER": "data/inputs/audio_transcripts/",
    "AUDIO_FOLDER": "data/inputs/audio/",
    "KEY_FRAMES_FOLDER": "data/inputs/key_frames/"
  },
  
  "OUTPUT": {
    "MODE": "vllm",
    "MODES": {
      "vllm": {
        "OUTPUT_FOLDER": "data/outputs/qwenvl_32b",
        "STATISTICS_FILE": "data/outputs/statistics/qwenvl_32b.txt"
      },
      "sglang": {
        "OUTPUT_FOLDER": "data/outputs/qwenvl_32b_sglang",
        "STATISTICS_FILE": "data/outputs/statistics/qwenvl_32b_sglang.txt"
  }
}
},

  "MODEL": {
    "MODEL_NAME": "Qwen/Qwen2.5-VL-32B-Instruct",
    "DTYPE": "half",
    "MAX_TOKENS": 2048,
    "TEMPERATURE": 0.1,
    "TOP_P": 0.9,
    "REPETITION_PENALTY": 1.05
  },

  "VIDEO_PROCESSING": {
    "NUM_SEGMENTS": 30,
    "INPUT_SIZE": 448
  },

  "FEATURES": {
    "TRANSCRIBE_AUDIO": false,
    "EXTRACT_KEY_FRAMES": false,
    "USE_KEY_FRAMES": true
  },

  "AUDIO_TRANSCRIPTION": {
    "WHISPER_MODEL": "openai/whisper-large-v3",
    "DEVICE_ID": 0,
    "CHUNK_LENGTH_S": 30,
    "BATCH_SIZE": 16
  },

  "KEY_FRAME_EXTRACTION": {
    "DETECTION_MODE": "scenedetect",
    "MAX_WORKERS": 8,
    "JPEG_QUALITY": 85,
    "THRESHOLD": 30.0,
    "MIN_SCENE_LEN": 15
  },

  "SAMPLING": {
    "SAMPLE": false,
    "SAMPLE_SIZE": 1
  }
}